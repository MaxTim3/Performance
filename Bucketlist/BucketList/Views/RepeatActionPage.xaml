<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BucketList.Views.RepeatActionPage">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="назад" Clicked="Back_Clicked"/>
            <Button Text="редактировать" Clicked="Edit_Clicked"/>
            <Button Text="удалить" Clicked="Delete_Clicked"/>

            <Label x:Name="count_number"
                   Text=""/>

            <Label Text="{Binding Name}"/>
            <Label Text="{Binding Number}"/>
            <Button Text="Выполнено" Clicked="Completed_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>