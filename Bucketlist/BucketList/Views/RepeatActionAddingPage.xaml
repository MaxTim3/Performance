<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BucketList.Views.RepeatActionAddingPage">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Назад"
Clicked="Back_Clicked"/>
            <Editor Placeholder="Название задачи"
    Text="{Binding Name}"/>
            <Editor Placeholder="Количество повторений"
    Text="{Binding Count}"/>
            <Button Text="Сохранить"
    Clicked="Save_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>